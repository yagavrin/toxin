include ../search-item/search-item
include ../search-form/search-form
include ../buttons/buttons

mixin booking
  .booking
    .booking__search-container
      +search-item__room-number({
        roomNumber: '888',
        roomPrice: '9 990',
        isLux: true,
        isBooking: true,
      })
    +input({
      inputType: 'range-date',
      firstTitle: 'прибытие',
      secondTitle: 'выезд',
      name: 'date',
    })
    .booking__dropdown-container
      +dropdown({
        dropdownType: 'guest',
        title: 'гости',
      })
    .booking__calculate
      .booking__container
        .booking__price 9 990₽ х 
          span.booking__days-count 1 сутки 
        .booking__total-price 9 990₽
      .booking__grid-container
        .booking__service-charge-block
          .booking__service-charge Сбор за услуги:
          .booking__sale-block
            span cкидка
            span.booking__service-charge-sale 2 179₽
        span(class='booking__info' 'data-info'= 'Подсказка') i
        .booking__service-charge-price 0₽
        .booking__add-services Сбор за дополнительные услуги
        span(class='booking__info booking__info2' 'data-info'= 'Подсказка 2') i
        .booking__add-services-price 300₽
      .booking__result-block
        .booking__result Итого
        .booking__divider
        .booking__total-sum 8 111₽
    +button({
      btnStyle: 'arrow',
      name: 'забронировать',
    })
