mixin room-review(reviewOptions)

    .room-review__item
      .room-review__container
        img.room-review__avatar(src= reviewOptions.avatarSrc, alt="avatar")
        .room-review__like-container
          +like-button({likeCount: reviewOptions.likeCount})
      .room-review__block
        .room-review__name= reviewOptions.authorName
        .room-review__review-date #{reviewOptions.reviewDate} назад
        .room-review__descr= reviewOptions.reviewDescr
