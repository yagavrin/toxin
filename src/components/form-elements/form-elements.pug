include ../logo/logo
include ../checkbox/checkbox
include ../radio-buttons/radio-buttons
include ../toggle/toggle
include ../like-button/like-button
include ../rate-button/rate-button
include ../dropdown/dropdown

mixin form-elements

    +logo_gray
    <span class="icon icon-star"></span>
    .form-elements
        .form-elements__wrapper
            .form-elements__block
                .form-elements__subtitle Text Field
                    p default
                input(class='input' type="text")
                .form-elements__subtitle Text Field
                    p Hover / Focus
                input(class='input' type="text")
                .form-elements__subtitle Dropdown
                    p default
                +dropdown
                .form-elements__subtitle masked text field
                    p default

            .form-elements__block
                .form-elements__container
                    .form-elements__subtitle Checkbox Buttons
                    +checkbox('', '', 'Можно курить')
                    +checkbox('', '', 'Можно с питомцами')
                    +checkbox('', '', 'Можно пригласить гостей (до 10 человек)')
                .form-elements__container
                    .form-elements__subtitle Radio Buttons
                    +radio-buttons({firstDescr: 'Мужчина', secondDescr: 'Женщина'})
                .form-elements__container
                    .form-elements__subtitle Toggle
                    +toggle({descr: 'Получать спецпредложения '})
                    +toggle({descr: 'Получать спецпредложения '})
                .form-elements__container
                    .form-elements__subtitle like button
                    .form-elements__like-container
                        .form-elements__like-container
                            +like-button({isSelected: false, likeCount: 2})
                        +like-button({isSelected: true, likeCount: 12})
                .form-elements__container
                    .form-elements__subtitle rate button
                    .form-elements__stars-container
                        .form-elements__stars-container
                            +rate-button(4)
                        +rate-button(5)
                    
                            

                    
                