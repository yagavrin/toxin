include ../search-form/search-form
include ../booking/booking
include ../reg-form/reg-form
include ../sign-in/sign-in
include ../search-item/search-item
include ../logo/logo

mixin cards

  .cards
    +logo_gray
    .cards__wrapper
      .cards__block
        +search-block
        .cards__container
          +reg-form
      .cards__block
        +booking
        .cards__container
          +sign-in
      .cards__block
        .datepicker-here('data-range'= 'true')
        .cards__container
          +search-item({
            src: "/src/components/search-item/image.jpg",
            roomNumber: '888',
            roomPrice: '9 990',
            isLux: true,
            starsCount: 5,
            reviewsCount: 145})
        .cards__container
          +search-item({
            src: "/src/components/search-item/image_2.jpg",
            roomNumber: '840',
            roomPrice: '9 900',
            starsCount: 4,
            reviewsCount: 65})


                